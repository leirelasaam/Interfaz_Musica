<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/cancion"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textAlbum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgPortada"
        app:layout_constraintTop_toBottomOf="@+id/imgPortada"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/album"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/textArtista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgPortada"
        app:layout_constraintTop_toBottomOf="@+id/textCancion" />

    <TextView
        android:id="@+id/textArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artista"
        android:textColor="@color/purple"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/barCancion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgPortada"
        app:layout_constraintTop_toBottomOf="@+id/textAlbum" />

    <ImageView
        android:id="@+id/imgPortada"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/textCancion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barVolumen"
        app:layout_constraintVertical_bias="0.58000004"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/cover"
        android:contentDescription="@string/no_sp_portada"/>

    <SeekBar
        android:id="@+id/barCancion"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:progress="25"
        android:theme="@style/CustomSeekBar"
        app:layout_constraintBottom_toTopOf="@+id/iconoPlayPause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textArtista" />

    <SeekBar
        android:id="@+id/barVolumen"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:progress="70"
        android:theme="@style/CustomSeekBar"
        app:layout_constraintBottom_toBottomOf="@+id/iconoVolumen"
        app:layout_constraintEnd_toStartOf="@+id/iconoVolumen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iconoVolumen"
        app:layout_constraintVertical_bias="0.48000002"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageButton
        android:id="@+id/iconoPlayPause"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#00FFFFFF"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/iconoPrev"
        app:layout_constraintEnd_toStartOf="@+id/iconoSig"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iconoPrev"
        app:layout_constraintTop_toTopOf="@+id/iconoPrev"
        app:srcCompat="@drawable/play"
        android:contentDescription="@string/no_sp_play_pause"/>

    <ImageButton
        android:id="@+id/iconoSig"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/iconoPlayPause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iconoPlayPause"
        app:layout_constraintTop_toTopOf="@+id/iconoPlayPause"
        app:srcCompat="@drawable/siguiente"
        android:contentDescription="@string/no_sp_siguiente"/>

    <ImageView
        android:id="@+id/iconoComp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iconoCola"
        app:layout_constraintTop_toBottomOf="@+id/iconoPlayPause"
        app:srcCompat="@drawable/share"
        android:contentDescription="@string/no_sp_compartir"/>

    <ImageView
        android:id="@+id/iconoCola"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#191919"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconoComp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iconoLetra"
        app:layout_constraintTop_toBottomOf="@+id/iconoPlayPause"
        app:srcCompat="@drawable/list"
        android:contentDescription="@string/no_sp_lista"/>

    <ImageView
        android:id="@+id/iconoLetra"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/lyrics"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconoCola"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconoPlayPause"
        android:contentDescription="@string/no_sp_letra"/>

    <ImageView
        android:id="@+id/iconoVolumen"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/imgPortada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/barVolumen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        app:srcCompat="@drawable/speaker"
        android:contentDescription="@string/no_sp_volumen"/>

    <ImageButton
        android:id="@+id/iconoPrev"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/iconoLetra"
        app:layout_constraintEnd_toStartOf="@+id/iconoPlayPause"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barCancion"
        app:srcCompat="@drawable/atras"
        android:contentDescription="@string/no_sp_anterior"/>

    <TextView
        android:id="@+id/textInicioMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/min_inicio"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/iconoPlayPause"
        app:layout_constraintEnd_toStartOf="@+id/textFinMin"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barCancion" />

    <TextView
        android:id="@+id/textFinMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/min_fin"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/iconoPlayPause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textInicioMin"
        app:layout_constraintTop_toBottomOf="@+id/barCancion" />

</androidx.constraintlayout.widget.ConstraintLayout>